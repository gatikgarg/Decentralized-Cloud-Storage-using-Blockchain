<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Customer List</title>

  <!-- Bootstrap (no extra styles added) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body>
  <div class="container my-4">
    <!-- Form -->
    <div class="row g-3 align-items-end">
      <div class="col-md-3">
        <label for="name" class="form-label">Name:</label>
        <input id="name" class="form-control" type="text" placeholder="Enter Name" />
      </div>

      <div class="col-md-3">
        <label for="email" class="form-label">Email id:</label>
        <input id="email" class="form-control" type="email" placeholder="Enter email" />
      </div>

      <div class="col-md-3">
        <label for="contact" class="form-label">Contact No.:</label>
        <input id="contact" class="form-control" type="tel" placeholder="Enter contact no" />
      </div>

      <div class="col-md-2">
        <label for="acctType" class="form-label">Account Type:</label>
        <select id="acctType" class="form-select">
          <option value="">Select account type</option>
          <option value="savings">savings</option>
          <option value="current">current</option>
        </select>
      </div>

      <div class="col-md-1 d-grid">
        <button id="addBtn" class="btn btn-primary">Add Customer</button>
      </div>
    </div>

    <!-- Table -->
    <div class="row mt-4">
      <div class="col-12">
        <table class="table table-bordered table-sm mb-0" id="custTable">
          <thead>
            <tr>
              <th style="width:25%;">Name</th>
              <th style="width:30%;">Email</th>
              <th style="width:20%;">Contact</th>
              <th style="width:15%;">Account Type</th>
              <th style="width:10%;">Action</th>
            </tr>
          </thead>
          <tbody id="custBody">
            <!-- rows will be rendered here -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // --- Simple in-memory data (you can edit these starter rows) ---
    const customers = [
      { name: "Sandra Rogers",  email: "rogers@gmail.com",   contact: "9090988877", acctType: "savings" },
      { name: "Steve Casey",    email: "casey@gmail.com",    contact: "8890988877", acctType: "current" },
      { name: "Michelle Michaels", email: "michaels@gmail.com", contact: "8999868899", acctType: "current" }
    ];

    // --- Helpers ---
    function $(id) {
      return document.getElementById(id);
    }

    function clearForm() {
      $("name").value = "";
      $("email").value = "";
      $("contact").value = "";
      $("acctType").value = "";
      $("name").focus();
    }

    function validInput(c) {
      // very basic checks to keep it simple
      if (!c.name.trim()) return false;
      if (!c.email.trim() || !c.email.includes("@")) return false;
      if (!c.contact.trim()) return false;
      if (!c.acctType) return false;
      return true;
    }

    // Renders all rows from `customers` into the table body
    function renderTable() {
      const body = $("custBody");
      body.innerHTML = ""; // clear

      customers.forEach(function (c, index) {
        const tr = document.createElement("tr");

        tr.innerHTML = `
          <td>${c.name}</td>
          <td>${c.email}</td>
          <td>${c.contact}</td>
          <td>${c.acctType}</td>
          <td>
            <button class="btn btn-sm btn-danger" data-index="${index}">Delete</button>
          </td>
        `;

        body.appendChild(tr);
      });
    }

    // Adds a new customer from the form
    function addCustomer() {
      const c = {
        name: $("name").value,
        email: $("email").value,
        contact: $("contact").value,
        acctType: $("acctType").value
      };

      if (!validInput(c)) {
        alert("Please fill all fields correctly.");
        return;
      }

      customers.push(c);
      renderTable();
      clearForm();
    }

    // Delete button handler (event delegation)
    $("custBody").addEventListener("click", function (e) {
      if (e.target.tagName === "BUTTON") {
        const idx = Number(e.target.getAttribute("data-index"));
        customers.splice(idx, 1);
        renderTable();
      }
    });

    // Wire up button
    $("addBtn").addEventListener("click", addCustomer);

    // Initial paint
    renderTable();
  </script>
</body>
</html>
