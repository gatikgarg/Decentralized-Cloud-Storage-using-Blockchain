        <span id="emailError" class="text-danger ms-2"></span>
      </div>
      <div class="d-flex align-items-center mb-3">
        <label for="contact" class="fw-bold me-3" style="width:120px; text-align:right;">Contact No:</label>
        <input type="text" id="contact" class="form-control" placeholder="Enter contact no">
        <span id="contactError" class="text-danger ms-2"></span>
      </div>
      <div class="d-flex align-items-center mb-3">
        <label for="account" class="fw-bold me-3" style="width:120px; text-align:right;">Account Type:</label>
        <select id="account" class="form-select">
          <option selected>Select account type</option>
          <option value="savings">savings</option>
          <option value="current">current</option>
        </select>
        <span id="accountError" class="text-danger ms-2"></span>
      </div>
    </form>

    <!-- Button -->
    <div class="mb-4">
      <button class="btn btn-primary" onclick="addCustomer()">Add Customer</button>
    </div>

    <!-- Table Section -->
    <table class="table table-bordered">
