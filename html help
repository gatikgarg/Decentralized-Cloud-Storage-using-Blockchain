      </div>
      <div class="col-md-3">
        <label for="email" class="form-label">Email Id:</label>
        <input id="email" class="form-control" type="email" placeholder="Enter Email" />
      </div>
      <div class="col-md-3">
        <label for="contact" class="form-label">Contact No:</label>
        <input id="contact" class="form-control" type="text" placeholder="Enter Contact No" />
      </div>
      <div class="col-md-2">
        <label for="acctType" class="form-label">Account Type:</label>
        <select id="acctType" class="form-select">
          <option value="">Select account type</option>
          <option value="savings">savings</option>
          <option value="current">current</option>
        </select>
      </div>
      <div class="col-md-1 d-grid">
        <button id="addBtn" class="btn btn-primary mt-4">Add Customer</button>
      </div>
    </div>

    <!-- Table -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Contact</th>
          <th>Account Type</th>
        </tr>
      </thead>
      <tbody id="custBody">
        <!-- Initial Data -->
        <tr>
