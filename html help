</head>
<body>
  <div class="container my-4">

    <!-- Form -->
    <div class="row g-3">
      <div class="col-md-3">
        <label for="name" class="form-label">Name:</label>
        <input id="name" class="form-control form-control-sm" type="text" placeholder="Enter Name">
        <small id="nameError" class="text-danger"></small>
      </div>
      <div class="col-md-3">
        <label for="email" class="form-label">Email Id:</label>
        <input id="email" class="form-control form-control-sm" type="email" placeholder="Enter Email">
        <small id="emailError" class="text-danger"></small>
      </div>
      <div class="col-md-3">
        <label for="contact" class="form-label">Contact No:</label>
        <input id="contact" class="form-control form-control-sm" type="text" placeholder="Enter Contact No">
        <small id="contactError" class="text-danger"></small>
      </div>
      <div class="col-md-2">
        <label for="acctType" class="form-label">Account Type:</label>
        <select id="acctType" class="form-select form-select-sm">
          <option value="">Select account type</option>
          <option value="savings">savings</option>
          <option value="current">current</option>
        </select>
        <small id="acctError" class="text-danger"></small>
      </div>
      <div class="col-md-1 d-grid align-items-end">
        <button id="addBtn" class="btn btn-primary btn-sm mt-4">Add Customer</button>
      </div>
    </div>

    <!-- Table inside border box -->
    <div class="border border-primary mt-4 p-2">
      <table class="table table-bordered table-sm mb-0">
        <thead>
          <tr>
            <th class="w-25">Name</th>
            <th class="w-25">Email</th>
            <th class="w-25">Contact</th>
            <th class="w-25">Account Type</th>
          </tr>
        </thead>
        <tbody id="custBody">
          <tr>
            <td>Sandra Rogers</td>
            <td>Rogers@gmail.com</td>
            <td>9090988877</td>
            <td>savings</td>
          </tr>
          <tr>
            <td>Steve Casey</td>
            <td>Casey@gmail.com</td>
            <td>8890988877</td>
            <td>current</td>
          </tr>
          <tr>
            <td>Michelle Michaels</td>
            <td>Michaels@gmail.com</td>
            <td>8999868899</td>
            <td>current</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const nameInput = document.getElementById("name");
    const emailInput = document.getElementById("email");
    const contactInput = document.getElementById("contact");
    const acctInput = document.getElementById("acctType");

    const nameError = document.getElementById("nameError");
    const emailError = document.getElementById("emailError");
    const contactError = document.getElementById("contactError");
    const acctError = document.getElementById("acctError");

    function validateInputs() {
      let valid = true;

      // Name validation (alphabets only)
      if (!/^[A-Za-z ]+$/.test(nameInput.value.trim())) {
        nameError.textContent = "Please enter only alphabets";
        valid = false;
      } else {
        nameError.textContent = "";
      }

      // Email validation
      const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
      if (!emailPattern.test(emailInput.value.trim())) {
        emailError.textContent = "Please enter a valid email";
        valid = false;
      } else {
        emailError.textContent = "";
      }

      // Contact validation (10 digits starting with 7,8,9)
      if (!/^[789]\d{9}$/.test(contactInput.value.trim())) {
        contactError.textContent = "Contact must be 10 digits starting with 7,8, or 9";
        valid = false;
      } else {
        contactError.textContent = "";
      }

      // Account type validation
      if (acctInput.value === "") {
        acctError.textContent = "Please select account type";
        valid = false;
      } else {
        acctError.textContent = "";
      }

      return valid;
    }

    document.getElementById("addBtn").addEventListener("click", function () {
      if (!validateInputs()) return;

      const tr = document.createElement("tr");
      tr.innerHTML = `
        <td>${nameInput.value}</td>
        <td>${emailInput.value}</td>
        <td>${contactInput.value}</td>
        <td>${acctInput.value}</td>
      `;
      document.getElementById("custBody").appendChild(tr);

      // Clear values after successful entry
      nameInput.value = "";
      emailInput.value = "";
      contactInput.value = "";
      acctInput.value = "";
    });
  </script>
</body>
</html>
